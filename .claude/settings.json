{
  "permissions": {
    "allow": [
      "Edit(**/src/**)",
      "Write(**/src/**)",
      "Read(**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(rm:*)",
      "Bash(gemini:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git add:*)",
      "Bash(git stash:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Read(id_rsa)",
      "Read(id_ed25519)"
    ],
    "ask": [
      "Bash(rm -rf:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/pg/my/dotfiles/assets/sounds/zelda.mp3"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
